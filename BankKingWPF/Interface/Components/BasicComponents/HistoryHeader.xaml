<UserControl x:Class="BankKingWPF.Interface.Components.HistoryHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BankKing.Interface.Components"
             mc:Ignorable="d" 
             d:Width="278" Height="34">
    <Border Style="{StaticResource HistoryItemBorder}">
        <TextBlock FontFamily="{StaticResource AppFontFamily}" Foreground="{StaticResource DarkAccentBrush}" FontSize="16"
                   Text="{Binding Name}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Border>
</UserControl>
