<UserControl 
            x:Class="BankKingWPF.UI.Components.Form.AddTransactionForm"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:local="clr-namespace:BankKingWPF.UI.Components.Form"
            xmlns:viewmodel="clr-namespace:BankKingViewModel.Form;assembly=BankKingViewModel"
            xmlns:dataEntry="clr-namespace:BankKingData.Entry;assembly=BankKingData"
            mc:Ignorable="d" 
            Height="202"
            Style="{StaticResource AddForm}"
            d:DataContext="{d:DesignInstance Type=viewmodel:AddTransactionViewModel, IsDesignTimeCreatable=True}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <local:InputRadioButton InputName="Type" SelectedValue="{Binding TransactionType}"
                                Grid.Row="0" Grid.Column="0"
                                LeftButtonText="Dépense" LeftButton="{x:Static dataEntry:EntryType.Expense}"
                                RightButtonText="Revenu" RightButton="{x:Static dataEntry:EntryType.Income}" />
        <local:InputComboBox InputName="Catégorie"
                             Grid.Row="0" Grid.Column="1"
                             InputList="{Binding DisplayedCategories}"
                             SelectedInput="{Binding Category}"/>

        <local:InputNumberComponent InputName="Quantité"
                                    Grid.Row="1" Grid.Column="0"
                                    InputNumber="{Binding Amount}"/>
        <local:InputDateComponent InputName="Date"
                                  Grid.Row="1" Grid.Column="1"
                                  InputDate="{Binding Date}"/>

    </Grid>

</UserControl>
