<UserControl 
            x:Class="BankKingWPF.UI.Components.Form.AddCategoryForm"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:local="clr-namespace:BankKingWPF.UI.Components.Form"
            xmlns:viewmodel="clr-namespace:BankKingViewModel.Form;assembly=BankKingViewModel"
            xmlns:utils="clr-namespace:BankKingWPF.UI.Utils"
            mc:Ignorable="d"
            Height="142"
            Style="{StaticResource AddForm}"
            d:DataContext="{d:DesignInstance Type=viewmodel:AddCategoryViewModel, IsDesignTimeCreatable=True}">

    <UserControl.Resources>
        <utils:EnumDescriptionConverter x:Key="EnumConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <local:InputTextComponent InputName="Nom de la catégorie"
                                      Grid.Row="0" Grid.Column="0"
                                      InputText="{Binding CategoryName}"/>
        <local:InputComboBox InputName="Type de la catégorie"
                             Grid.Row="0" Grid.Column="1"
                             InputList="{Binding EntryTypes}"
                             SelectedInput="{Binding Type}">
            <local:InputComboBox.ItemTemplate>
                <DataTemplate>
                    <!-- Form decides to use the converter here -->
                    <TextBlock Text="{Binding Converter={StaticResource EnumConverter}}"/>
                </DataTemplate>
            </local:InputComboBox.ItemTemplate>
        </local:InputComboBox>
    </Grid>
</UserControl>
