<UserControl 
            x:Class="BankKingWPF.UI.Components.Form.AddAccountForm"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:local="clr-namespace:BankKingWPF.UI.Components.Form"
            xmlns:viewmodel="clr-namespace:BankKingViewModel.Form;assembly=BankKingViewModel"
            mc:Ignorable="d" Height="142"
            Style="{StaticResource AddForm}" d:DataContext="{d:DesignInstance Type=viewmodel:AddAccountViewModel, IsDesignTimeCreatable=True}" >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <local:InputTextComponent InputName="Nom" 
                                  InputText="{Binding AccountTitle}"/>
        <local:InputNumberComponent InputName="Montant de départ" Grid.Column="1" 
                                    InputNumber="{Binding InitialBalance}"/>
    </Grid>

</UserControl>
