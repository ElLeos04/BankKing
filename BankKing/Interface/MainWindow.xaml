<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankKing"
        xmlns:Components="clr-namespace:BankKing.Interface.Components" x:Class="BankKing.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920" MinWidth="1920" MinHeight="1080"
        UseLayoutRounding="True">

    <DockPanel>
        <Grid x:Name="SideBar" Background="{DynamicResource PanelBrush}" DockPanel.Dock="Left" Width="215">
            <Border BorderBrush="{DynamicResource DarkAccentBrush}" BorderThickness="0,0,5,0">
                <Grid>
                    <TextBlock Margin="0,30,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"
                           TextWrapping="Wrap" TextAlignment="Center" FontFamily="{DynamicResource AppFontFamily}" FontSize="65" FontWeight="Bold"
                           Foreground="{DynamicResource DarkAccentBrush}">Bank King</TextBlock>


                    <Grid Margin="0,200,0,0">
                        <StackPanel VerticalAlignment="Center">
                            <Components:ImageButton ButtonText="Comptes" ImageSource="/Resources/Icons/account.png"/>
                            <Components:ImageButton ButtonText="Épargnes" ImageSource="/Resources/Icons/savings.png"/>
                            <Components:ImageButton ButtonText="Gestion" ImageSource="/Resources/Icons/parameters.png"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <Grid x:Name="MainPanel">
            <Components:AcountDetails/>
        </Grid>
    </DockPanel>
</Window>
