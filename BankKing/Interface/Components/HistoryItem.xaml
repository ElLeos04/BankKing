<UserControl x:Name="component" x:Class="BankKing.Interface.Components.HistoryItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BankKing.Interface.Components"
             mc:Ignorable="d"
             Width="274" Height="34">
    <Border BorderThickness="0,0,0,2" BorderBrush="{DynamicResource LightAccentBrush}" Background="{DynamicResource PanelBrush}" CornerRadius="0">
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="0"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsFirstItem, ElementName=component}" Value="True">
                        <Setter Property="CornerRadius" Value="6,6,0,0"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding IsLastItem, ElementName=component}" Value="True">
                        <Setter Property="CornerRadius" Value="0,0,6,6"/>
                    </DataTrigger>
                    <MultiDataTrigger>
                        <MultiDataTrigger.Conditions>
                            <Condition Binding="{Binding IsFirstItem, ElementName=component}" Value="True"/>
                            <Condition Binding="{Binding IsLastItem, ElementName=component}" Value="True"/>
                        </MultiDataTrigger.Conditions>
                        <Setter Property="CornerRadius" Value="6,6,6,6"/>
                    </MultiDataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
        <Grid>
            <TextBlock HorizontalAlignment="Left" Margin="15,0,0,0" TextWrapping="Wrap"  VerticalAlignment="Center" FontFamily="{DynamicResource AppFontFamily}" FontSize="14" Foreground="{DynamicResource DarkAccentBrush}"
                       Text="{Binding EntryCategory, ElementName=component}">
            </TextBlock>
            <GridSplitter HorizontalAlignment="Center" Width="2" Background="{DynamicResource LightAccentBrush}"/>
            <TextBlock HorizontalAlignment="Right" TextWrapping="Wrap" VerticalAlignment="Center" Margin="0,0,15,0" TextAlignment="Right" Foreground="{DynamicResource PositiveValueBrush}"
                       Text="{Binding EntryAmount, ElementName=component}">
            </TextBlock>
        </Grid>
    </Border>
</UserControl>
